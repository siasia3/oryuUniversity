<script>
<!--요청수락 버튼-->
$('#allowRow').on('click',function(){
	event.preventDefault();
    let $checkLecCd= $("input:checked").parent('td').siblings('.lecCd');
    let lecCd=[];
    for(let i = 0;i<$checkLecCd.length;i++){
    	lecCd.push($checkLecCd[i].innerText);
    }
    let setting = {
       url : "/oryuUniversity/lecture/allowLecture.do",
       method : "post",
       dataType : "text",
       traditional: true,
       data : {
    	   lecCd : lecCd
       },
       success : function(resp) {
          if(resp=="success"){
            alert("성공")
            window.location.href="<%=request.getContextPath()%>/lecture/lectureList.do";
          }else{
			alert("실패");
          }
       },
       error : function(jqXHR, status, error) {
          console.log(jqXHR)
          console.log(status)
          console.log(error)
       }
    }

    $.ajax(setting);
 })
