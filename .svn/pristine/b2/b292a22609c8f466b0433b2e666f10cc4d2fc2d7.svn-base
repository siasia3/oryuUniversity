<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c" %>
<%@ taglib uri="http://www.springframework.org/tags/form" prefix="form" %>
<script src="${pageContext.request.contextPath}/resources/js/ckeditor/ckeditor.js"></script>
<form:form method="post" modelAttribute="notice" enctype="multipart/form-data">
<form:hidden path="lnNum"/>
	<table class="table table-bordered">
		<tr>
			<th>제목</th>
			<td>
				<form:input path="lnTitle" class="form-control" />
				<form:errors path="lnTitle" class="error"/>
			</td>
		</tr>
		<tr>
			<th>내용</th>
			<td>
				<form:textarea path="lnCont" class="form-control "/>
				<form:errors path="lnCont" class="error" />
			</td>
		</tr>
		<tr>
			<th>기존 첨부파일</th>
			<td>
				<c:if test="${not empty notice.fileGroup and not empty notice.fileGroup.detailList }">
				<c:forEach items="${notice.fileGroup.detailList }" var="fileDetail">
					<c:url value="/download.do" var="downloadURL">
						<c:param name="atchFileId" value="${fileDetail.atchFileId }" />
						<c:param name="fileSn" value="${fileDetail.fileSn }" />
					</c:url>
					<a href="${downloadURL }">${fileDetail.orignlFileNm }</a>
				</c:forEach>
			</c:if>
			</td>
		</tr>
		<tr>
			<th>새 첨부파일</th>
			<td>
				<input type="file" name="noticeFiles" multiple />
			</td>
		</tr>
		<tr>
			<c:url value="/lecture/noticeList.do" var="ListURL" >
				<c:param name="what" value="${notice.lnNum }" />
			</c:url>
			<td colspan="2">
				<input type="submit" class="btn btn-primary" onclick="return confirmUpdate(event)" value="저장" >
				<a class="btn btn-danger" href="${ListURL }">취소</a>
			</td>
		</tr>
	</table>
</form:form>
<script>
	CKEDITOR.replace('lnCont', {
   		filebrowserImageUploadUrl: '${pageContext.request.contextPath }/uploadImage.do'
	});
	
	function confirmUpdate(event) {
        var result = confirm("수정한 내용을 저장하시겠습니까?");
        if (!result) {
            event.preventDefault();
            return false;
        }
        return true;
    }
</script>

